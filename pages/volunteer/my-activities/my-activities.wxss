.my-activities {
  padding: 24rpx 32rpx;
  box-sizing: border-box;
}

.activity-item {
  margin-bottom: 20rpx;
}

.title-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 700;
  color: #0f172a;
  flex: 1;
}

.badge {
  min-width: 40rpx;
  padding: 4rpx 10rpx;
  background: #ef4444;
  color: #fff;
  border-radius: 999rpx;
  font-size: 24rpx;
  text-align: center;
  align-self: center;
}

.meta {
  color: #64748b;
  margin-top: 8rpx;
}

.meta.muted {
  color: #94a3b8;
}

.empty {
  text-align: center;
  color: #94a3b8;
  margin-top: 120rpx;
}
