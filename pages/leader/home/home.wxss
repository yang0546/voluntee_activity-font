.page {
  min-height: 100vh;
  background: #f6f7fb;
  padding: 24rpx 20rpx 120rpx;
  box-sizing: border-box;
  position: relative;
}

.top-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 340rpx;
  background: linear-gradient(135deg, #f97316 0%, #ea580c 40%, #dc2626 100%);
  border-radius: 0 0 32rpx 32rpx;
  z-index: 0;
}

.nav-bar {
  position: relative;
  z-index: 2;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  padding: 10rpx 4rpx;
  color: #f9fbff;
}

.nav-left {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 800;
}

.nav-sub {
  font-size: 24rpx;
  opacity: 0.85;
}

.hero-card {
  position: relative;
  z-index: 2;
  margin-top: 12rpx;
  padding: 26rpx 24rpx;
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 18rpx 40rpx rgba(64, 73, 118, 0.15);
}

.hero-left {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  color: #0f172a;
}

.hero-label {
  font-size: 24rpx;
  color: #f97316;
  font-weight: 600;
}

.hero-title {
  font-size: 38rpx;
  font-weight: 800;
}

.hero-sub {
  font-size: 24rpx;
  color: #6b7280;
}

.stats-grid {
  position: relative;
  z-index: 2;
  margin-top: 18rpx;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 14rpx;
}

.stat-card {
  background: #ffffff;
  border-radius: 18rpx;
  padding: 24rpx;
  text-align: center;
  box-shadow: 0 10rpx 24rpx rgba(64, 73, 118, 0.08);
  border: 1rpx solid #eef1f5;
}

.stat-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 800;
  color: #ea580c;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #6b7280;
}

.actions-section {
  position: relative;
  z-index: 2;
  margin-top: 24rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #111827;
  margin-bottom: 16rpx;
}

.action-cards {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 14rpx;
}

.action-card {
  background: #ffffff;
  border-radius: 18rpx;
  padding: 32rpx 20rpx;
  text-align: center;
  box-shadow: 0 10rpx 24rpx rgba(64, 73, 118, 0.08);
  border: 1rpx solid #eef1f5;
}

.action-card.primary {
  background: linear-gradient(135deg, #f97316 0%, #ea580c 100%);
  color: #fff;
  border: none;
}

.action-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.action-text {
  font-size: 26rpx;
  font-weight: 600;
  color: #111827;
}

.action-card.primary .action-text {
  color: #fff;
}

