.page {
  min-height: 100vh;
  padding: 20rpx 20rpx 140rpx;
  box-sizing: border-box;
  background: linear-gradient(180deg, #0f182e 0%, #0f182e 32%, #f6f7fb 32%);
}

button::after {
  border: none;
}

.nav-shell {
  color: #e8f0ff;
  background: radial-gradient(circle at 20% 20%, rgba(76, 168, 255, 0.25), transparent 40%), linear-gradient(135deg, #0e1f3a 0%, #12385b 100%);
  border-radius: 24rpx;
  padding: 26rpx 28rpx;
  box-shadow: 0 16rpx 40rpx rgba(10, 29, 64, 0.35);
  margin-bottom: 22rpx;
}

.brand {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.brand-title {
  font-size: 34rpx;
  font-weight: 700;
}

.brand-sub {
  font-size: 24rpx;
  color: #9fb7d3;
}

.nav-tabs {
  display: flex;
  gap: 16rpx;
  margin-top: 18rpx;
}

.nav-tab {
  padding: 16rpx 24rpx;
  border-radius: 16rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.25);
  color: #d7e6ff;
  font-size: 26rpx;
  backdrop-filter: blur(6rpx);
}

.nav-tab.active {
  background: linear-gradient(135deg, #22c1c3 0%, #3a7bd5 100%);
  color: #0f182e;
  border: none;
  box-shadow: 0 10rpx 26rpx rgba(34, 193, 195, 0.28);
}

.hero {
  background: linear-gradient(135deg, #11213b 0%, #0f2d4d 100%);
  color: #e4eeff;
  border-radius: 24rpx;
  padding: 28rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 20rpx;
  box-shadow: 0 14rpx 32rpx rgba(12, 31, 70, 0.25);
  margin-bottom: 24rpx;
}

.hero-text {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.hero-title {
  font-size: 32rpx;
  font-weight: 700;
}

.hero-sub {
  font-size: 24rpx;
  color: #b8c6dd;
}

.hero-actions {
  display: flex;
  gap: 14rpx;
}

.pill-btn {
  padding: 16rpx 26rpx;
  border-radius: 999rpx;
  font-size: 26rpx;
  border: none;
}

.pill-btn.primary {
  background: linear-gradient(135deg, #22c1c3 0%, #3a7bd5 100%);
  color: #0f182e;
  box-shadow: 0 10rpx 24rpx rgba(34, 193, 195, 0.3);
}

.pill-btn.ghost {
  background: rgba(255, 255, 255, 0.08);
  color: #dce8ff;
  border: 1rpx solid rgba(255, 255, 255, 0.15);
}

.card {
  background: #fff;
  border-radius: 24rpx;
  padding: 28rpx;
  box-shadow: 0 14rpx 36rpx rgba(12, 31, 70, 0.08);
}

.filter-card {
  margin-bottom: 24rpx;
}

.filter-inline {
  display: flex;
  gap: 14rpx;
  margin-top: 6rpx;
}

.input,
.picker {
  flex: 1;
  height: 76rpx;
  padding: 0 22rpx;
  border-radius: 999rpx;
  background: #f4f6fb;
  font-size: 26rpx;
  color: #111827;
  border: 2rpx solid transparent;
}

.input:focus,
.picker:active {
  border-color: #3a7bd5;
}

.picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.chevron {
  font-size: 26rpx;
  color: #9ca3af;
}

.pill-btn.wide {
  min-width: 180rpx;
}

.section-head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 10rpx 4rpx 18rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #111827;
  margin-right: 10rpx;
}

.section-sub {
  font-size: 24rpx;
  color: #6b7280;
}

.mini-actions {
  display: flex;
  gap: 12rpx;
}

.mini-btn {
  padding: 12rpx 22rpx;
  border-radius: 14rpx;
  border: 1rpx solid #d1d5db;
  background: #fff;
  font-size: 24rpx;
  color: #374151;
}

.list {
  max-height: calc(100vh - 360rpx);
  padding-bottom: 40rpx;
}

.activity-card {
  background: #fff;
  border-radius: 22rpx;
  padding: 26rpx;
  margin-bottom: 18rpx;
  box-shadow: 0 10rpx 28rpx rgba(17, 24, 39, 0.06);
  border: 1rpx solid #eef0f4;
  position: relative;
}

.card-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 700;
  color: #111827;
  flex: 1;
  padding-right: 20rpx;
}

.status-badge {
  padding: 10rpx 20rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.status-pending {
  background: #e1f5ff;
  color: #0a6db4;
}

.status-active {
  background: #e4f7ed;
  color: #237b4b;
}

.status-ended {
  background: #f4f4f5;
  color: #4b5563;
}

.status-cancelled {
  background: #ffe8e8;
  color: #c21d3a;
}

.desc {
  font-size: 26rpx;
  color: #4b5563;
  line-height: 1.6;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.meta-grid {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 12rpx;
  margin-bottom: 14rpx;
}

.meta {
  background: #f8fafc;
  border-radius: 14rpx;
  padding: 14rpx 16rpx;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.meta-label {
  font-size: 24rpx;
  color: #6b7280;
}

.meta-value {
  font-size: 26rpx;
  color: #1f2937;
  word-break: break-all;
}

.foot {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 6rpx;
}

.leader {
  font-size: 24rpx;
  color: #4b5563;
}

.card-chevron {
  color: #cbd5e1;
  font-size: 38rpx;
  padding-left: 10rpx;
}

.load-more,
.no-more,
.empty {
  text-align: center;
  padding: 26rpx 0;
  font-size: 26rpx;
  color: #9ca3af;
}
