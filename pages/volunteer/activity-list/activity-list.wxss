.activity-page .search-box {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.search-input {
  flex: 1;
  background: #f8fafc;
  border-radius: 14rpx;
  padding: 16rpx 20rpx;
  font-size: 28rpx;
}

.search-btn {
  background: linear-gradient(135deg, #4f46e5, #3b82f6);
  color: #fff;
}

.status-tabs {
  display: flex;
  gap: 16rpx;
  padding: 18rpx;
}

.tab {
  padding: 12rpx 18rpx;
  border-radius: 14rpx;
  background: #f8fafc;
  color: #475569;
  font-size: 26rpx;
}

.tab.active {
  background: #eef2ff;
  color: #4338ca;
  font-weight: 700;
}

.activity-card {
  margin-top: 20rpx;
  border: 1rpx solid #e5e7eb;
  box-shadow: 0 12rpx 28rpx rgba(15, 23, 42, 0.06);
  border-radius: 20rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 8rpx;
}

.card-header .title {
  font-size: 32rpx;
  font-weight: 700;
  color: #0f172a;
}

.card .tag {
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
}

.meta {
  color: #64748b;
  margin: 8rpx 0;
  font-size: 26rpx;
}

.meta .dot {
  margin: 0 10rpx;
}

.meta-time {
  color: #1f2937;
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.meta-time::before {
  content: '';
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background: #4f46e5;
  display: inline-block;
}

.progress {
  width: 100%;
  height: 14rpx;
  background: linear-gradient(90deg, #e0e7ff, #e2e8f0);
  border-radius: 14rpx;
  overflow: hidden;
  margin: 10rpx 0;
}

.progress-bar {
  height: 100%;
  background: linear-gradient(90deg, #22c55e, #16a34a);
}

.progress-text {
  color: #94a3b8;
  font-size: 24rpx;
  margin-bottom: 12rpx;
}

.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 6rpx;
  padding-top: 6rpx;
  border-top: 1rpx solid #e5e7eb;
}

.actions {
  display: flex;
  gap: 12rpx;
}

.ghost-btn {
  background: #eef2ff;
  color: #4338ca;
}

.primary-btn {
  background: linear-gradient(135deg, #22c55e, #16a34a);
  color: #fff;
  border: none;
}

.activity-card .info {
  color: #0f172a;
  font-weight: 600;
}

.activity-card .muted {
  color: #94a3b8;
}

.empty,
.loading {
  text-align: center;
  color: #94a3b8;
  margin-top: 40rpx;
}
