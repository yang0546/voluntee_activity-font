<view class="page my-activities">
  <block wx:if="{{list.length}}">
    <view wx:for="{{list}}" wx:key="id" class="card activity-item" data-id="{{item.activityId}}" bindtap="goDetail">
      <view class="title-row">
        <view class="title">{{item.activityTitle || item.title || '志愿活动'}}</view>
        <view wx:if="{{item.pendingTaskCount > 0}}" class="badge">{{item.pendingTaskCount}}</view>
        <view class="tag status-approved">已通过</view>
      </view>
      <view class="meta muted">报名时间：{{item.signupTimeText || '—'}}</view>
    </view>
  </block>
  <view wx:else class="empty">暂无已通过的活动，快去报名吧</view>
</view>
