/** 全局基础样式 **/
page {
  background: #f6f8fb;
  color: #0f172a;
  font-family: "Helvetica Neue", Arial, sans-serif;
}

.page {
  min-height: 100vh;
  box-sizing: border-box;
  padding: 24rpx 32rpx 120rpx;
}

.card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 6rpx 18rpx rgba(15, 23, 42, 0.06);
  box-sizing: border-box;
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  font-weight: 700;
  color: #0f172a;
  margin: 12rpx 0 20rpx;
}

.section-subtitle {
  font-size: 26rpx;
  color: #475569;
}

.tag {
  display: inline-block;
  padding: 6rpx 14rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  color: #0f172a;
  background: #eef2ff;
}

.tag-secondary {
  background: #ecfeff;
  color: #0e7490;
}

.tag-danger {
  background: #fef2f2;
  color: #b91c1c;
}

.status-pending {
  background: #fff7ed;
  color: #c2410c;
}

.status-approved {
  background: #ecfeff;
  color: #0ea5e9;
}

.status-rejected {
  background: #fef2f2;
  color: #b91c1c;
}

.status-ongoing {
  background: #eef2ff;
  color: #4338ca;
}

.btn-primary {
  background: linear-gradient(120deg, #4f46e5, #3b82f6);
  color: #ffffff;
  border: none;
  border-radius: 16rpx;
  padding: 20rpx 0;
  font-size: 28rpx;
  font-weight: 600;
}

.btn-ghost {
  background: #eef2ff;
  color: #3730a3;
  border-radius: 16rpx;
  padding: 18rpx 0;
  font-size: 28rpx;
  font-weight: 600;
}

.muted {
  color: #64748b;
}

.flex {
  display: flex;
}

.flex-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.flex-center {
  display: flex;
  align-items: center;
}

.gap-md {
  margin-top: 16rpx;
}
