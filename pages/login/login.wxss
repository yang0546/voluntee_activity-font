.page {
  min-height: 100vh;
  background: linear-gradient(180deg, #0f182e 0%, #132b4f 35%, #f5f7fb 35%);
  padding: 48rpx 36rpx 80rpx;
  box-sizing: border-box;
}

.hero-card {
  display: flex;
  gap: 24rpx;
  align-items: center;
  background: linear-gradient(135deg, #22c1c3 0%, #3a7bd5 100%);
  border-radius: 28rpx;
  padding: 30rpx;
  box-shadow: 0 18rpx 44rpx rgba(34, 193, 195, 0.35);
  margin-bottom: 28rpx;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  border-radius: 24rpx;
  background: rgba(255, 255, 255, 0.16);
  font-size: 56rpx;
  font-weight: 800;
  color: #fff;
}

.hero-text {
  flex: 1;
  color: #fff;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 800;
}

.subtitle {
  font-size: 26rpx;
  color: #e5f4ff;
}

.tags {
  display: flex;
  gap: 12rpx;
  margin-top: 8rpx;
}

.tag {
  padding: 10rpx 16rpx;
  border-radius: 999rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.35);
  font-size: 22rpx;
  color: #fff;
  backdrop-filter: blur(4rpx);
}

.card {
  background: #fff;
  border-radius: 24rpx;
  padding: 34rpx;
  box-shadow: 0 16rpx 40rpx rgba(12, 31, 70, 0.12);
}

.card-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #0f172a;
  margin-bottom: 18rpx;
}

.card-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.item {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #22c1c3 0%, #3a7bd5 100%);
}

.item-text {
  font-size: 26rpx;
  color: #334155;
}

.tip {
  font-size: 24rpx;
  color: #6b7280;
  line-height: 1.6;
  margin-bottom: 28rpx;
}

.primary-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background: linear-gradient(135deg, #22c1c3 0%, #3a7bd5 100%);
  color: #0f182e;
  font-size: 32rpx;
  font-weight: 700;
  border-radius: 999rpx;
  border: none;
  box-shadow: 0 12rpx 32rpx rgba(34, 193, 195, 0.32);
}

.primary-btn::after {
  border: none;
}

.footer {
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
  gap: 10rpx;
  font-size: 22rpx;
  color: #94a3b8;
}

.link {
  color: #3a7bd5;
}

