.record-card {
  margin-bottom: 18rpx;
  box-shadow: 0 10rpx 24rpx rgba(15, 23, 42, 0.08);
  border: 1rpx solid #e5e7eb;
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.record-header .title {
  font-size: 32rpx;
  font-weight: 700;
}

.record-card .tag {
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
}

.meta-row {
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
}

.meta-row .label {
  color: #94a3b8;
}

.meta-row .value {
  color: #0f172a;
}

.audit-reason {
  margin-top: 10rpx;
  color: #b91c1c;
  font-size: 26rpx;
  line-height: 1.4;
}

.empty {
  text-align: center;
  color: #94a3b8;
  margin-top: 80rpx;
}
