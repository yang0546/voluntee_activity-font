.page {
  min-height: 100vh;
  padding: 26rpx;
  background: linear-gradient(180deg, #0f182e 0%, #f6f7fb 32%, #f6f7fb 100%);
  box-sizing: border-box;
}

button::after {
  border: none;
}

.form-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 34rpx;
  box-shadow: 0 16rpx 36rpx rgba(12, 31, 70, 0.08);
}

.form-head {
  margin-bottom: 12rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.title {
  font-size: 34rpx;
  font-weight: 700;
  color: #111827;
}

.sub {
  font-size: 24rpx;
  color: #6b7280;
}

.form-item {
  margin-top: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.form-row {
  display: flex;
  gap: 18rpx;
}

.half {
  flex: 1;
}

.label {
  font-size: 26rpx;
  color: #374151;
  font-weight: 600;
}

.input,
.picker-view,
.textarea {
  width: 100%;
  padding: 0 22rpx;
  border-radius: 18rpx;
  background: #f4f6fb;
  font-size: 28rpx;
  color: #111827;
  border: 2rpx solid transparent;
}

.input,
.picker-view {
  height: 88rpx;
  line-height: 88rpx;
}

.textarea {
  padding-top: 18rpx;
  padding-bottom: 18rpx;
  min-height: 200rpx;
  line-height: 1.6;
}

.input:focus,
.picker-view:active,
.textarea:focus {
  border-color: #f97316;
}

.picker-view {
  display: flex;
  align-items: center;
}

.actions {
  margin-top: 40rpx;
}

.primary-btn {
  width: 100%;
  height: 92rpx;
  line-height: 92rpx;
  text-align: center;
  border-radius: 999rpx;
  background: linear-gradient(135deg, #f97316 0%, #ea580c 100%);
  color: #fff;
  font-size: 30rpx;
  font-weight: 700;
  border: none;
  box-shadow: 0 12rpx 28rpx rgba(249, 115, 22, 0.32);
}

.primary-btn[disabled] {
  background: #cfd8e3;
  color: #6b7280;
  box-shadow: none;
}
