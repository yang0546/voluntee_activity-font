<view class="page">
  <view class="form-card">
    <view class="form-head">
      <text class="title">修改个人信息</text>
      <text class="sub">只填写需要调整的字段</text>
    </view>

    <view class="form-item">
      <text class="label">姓名</text>
      <input class="input" placeholder="请输入姓名" value="{{form.name}}" data-field="name" bindinput="onInputChange" />
    </view>

    <view class="form-item">
      <text class="label">手机号</text>
      <input class="input" type="number" placeholder="请输入手机号" value="{{form.phone}}" data-field="phone" bindinput="onInputChange" />
    </view>

    <view class="form-item">
      <text class="label">所属学院</text>
      <input class="input" placeholder="请输入学院" value="{{form.college}}" data-field="college" bindinput="onInputChange" />
    </view>

    <view class="tips">提交后信息将同步到个人中心</view>

    <view class="actions">
      <button class="primary-btn" bindtap="handleSubmit" disabled="{{loading}}">保存修改</button>
    </view>
  </view>
</view>
