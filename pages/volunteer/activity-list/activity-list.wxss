.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(180deg, #ecf3ff 0%, #f8fbff 45%, #f7f7f7 100%);
}

.page-header {
  padding: 32rpx 28rpx 10rpx;
  background: linear-gradient(135deg, #1f2937, #111827 55%, #0b1220);
  color: #fff;
  border-bottom-left-radius: 28rpx;
  border-bottom-right-radius: 28rpx;
  box-shadow: 0 18rpx 38rpx rgba(0, 0, 0, 0.25);
}

.hero-text {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.eyebrow {
  font-size: 24rpx;
  letter-spacing: 2rpx;
  opacity: 0.85;
  text-transform: uppercase;
}

.hero-title {
  font-size: 44rpx;
  font-weight: 750;
}

.hero-sub {
  font-size: 26rpx;
  opacity: 0.9;
}

.hero-stats {
  display: flex;
  gap: 12rpx;
  margin-top: 18rpx;
}

.stat-pill {
  background: rgba(255, 255, 255, 0.14);
  border: 1rpx solid rgba(255, 255, 255, 0.28);
  border-radius: 26rpx;
  padding: 12rpx 20rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  backdrop-filter: blur(6rpx);
}

.stat-label {
  font-size: 24rpx;
}

.stat-number {
  font-size: 32rpx;
  font-weight: 700;
}

.tab-bar {
  display: flex;
  padding: 16rpx 20rpx 0;
  background: transparent;
  gap: 12rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 18rpx 0;
  border-radius: 40rpx;
  background: rgba(255, 255, 255, 0.95);
  color: #4b5563;
  font-size: 30rpx;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.05);
}

.tab-item.active {
  background: linear-gradient(120deg, #ffb347, #ffcc33, #ffd479);
  color: #0f172a;
  font-weight: 700;
  box-shadow: 0 12rpx 24rpx rgba(255, 180, 71, 0.35);
}

.search-card {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 18rpx 20rpx 0;
}

.input-wrap {
  flex: 1;
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 18rpx;
  padding: 0 16rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.06);
}

.search-input {
  flex: 1;
  height: 64rpx;
  padding: 0 10rpx;
  background: transparent;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.status-picker {
  display: flex;
  align-items: center;
  padding: 0 18rpx;
  height: 64rpx;
  background: #fff;
  border-radius: 16rpx;
  font-size: 28rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.06);
}

.arrow {
  margin-left: 10rpx;
  font-size: 20rpx;
  color: #999;
}

.search-btn {
  height: 64rpx;
  line-height: 64rpx;
  padding: 0 32rpx;
  background: linear-gradient(120deg, #0f172a, #111827);
  color: #fff;
  border-radius: 16rpx;
  font-size: 28rpx;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(17, 24, 39, 0.35);
}

.scroll-area {
  flex: 1;
  padding: 24rpx 20rpx 40rpx;
}

.activity-item {
  background: #fff;
  border-radius: 24rpx;
  padding: 28rpx;
  margin-bottom: 22rpx;
  box-shadow: 0 16rpx 32rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid #eef0f4;
}

.activity-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.badge-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #d1d5db;
}

.activity-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #111827;
  flex: 1;
  line-height: 1.4;
}

.status-chip {
  padding: 6rpx 16rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
  border: 1rpx solid transparent;
}

.status-pending {
  background: #eef2ff;
  color: #4338ca;
  border-color: #c7d2fe;
}

.status-active {
  background: #ecfdf3;
  color: #047857;
  border-color: #bbf7d0;
}

.status-ended {
  background: #f4f4f5;
  color: #6b7280;
  border-color: #e5e7eb;
}

.status-cancelled {
  background: #fef2f2;
  color: #b91c1c;
  border-color: #fecdd3;
}

.activity-desc {
  font-size: 28rpx;
  color: #4b5563;
  line-height: 1.6;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.activity-info {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 10rpx;
  margin-bottom: 16rpx;
}

.info-chip {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 10rpx 14rpx;
  background: #f4f6fb;
  border-radius: 12rpx;
  color: #374151;
  font-size: 26rpx;
}

.icon {
  width: 32rpx;
  text-align: center;
}

.activity-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 14rpx;
  border-top: 1rpx solid #eee;
}

.leader {
  font-size: 26rpx;
  color: #4b5563;
}

.deadline {
  font-size: 24rpx;
  color: #9ca3af;
}

.activity-actions {
  margin-top: 18rpx;
  display: flex;
  justify-content: flex-end;
}

.signup-btn {
  min-width: 180rpx;
  height: 64rpx;
  line-height: 64rpx;
  border-radius: 18rpx;
  background: linear-gradient(120deg, #2563eb, #1d4ed8);
  box-shadow: 0 8rpx 20rpx rgba(37, 99, 235, 0.35);
}

.load-more, .no-more, .empty {
  text-align: center;
  padding: 40rpx;
  font-size: 28rpx;
  color: #6b7280;
}

.signup-card {
  background: #fff;
  border-radius: 22rpx;
  padding: 26rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 14rpx 28rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid #eef0f4;
}

.signup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 14rpx;
}

.signup-title {
  font-size: 30rpx;
  font-weight: 650;
  color: #111827;
  flex: 1;
}

.audit-badge {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  border: 1rpx solid transparent;
}

.audit-pending {
  background: #fff7e6;
  color: #d48806;
  border-color: #ffd591;
}

.audit-approved {
  background: #e8f5e9;
  color: #2e7d32;
  border-color: #c8e6c9;
}

.audit-rejected {
  background: #ffebee;
  color: #d32f2f;
  border-color: #ffcdd2;
}

.signup-desc {
  font-size: 28rpx;
  color: #4b5563;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.audit-reason {
  font-size: 26rpx;
  color: #b91c1c;
  background: #fef2f2;
  padding: 10rpx 14rpx;
  border-radius: 12rpx;
  border: 1rpx solid #fecdd3;
  margin-bottom: 12rpx;
  display: inline-block;
}

.signup-meta {
  font-size: 24rpx;
  color: #9ca3af;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}
