.page {
  min-height: 100vh;
  padding: 28rpx;
  background: linear-gradient(180deg, #eef2ff 0%, #f9fafb 32%, #f9fafb 100%);
}

button::after {
  border: none;
}

.form-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 36rpx;
  box-shadow: 0 18rpx 42rpx rgba(59, 75, 255, 0.08);
}

.form-head {
  margin-bottom: 20rpx;
}

.title {
  font-size: 34rpx;
  font-weight: 700;
  color: #0f172a;
}

.sub {
  margin-top: 6rpx;
  font-size: 24rpx;
  color: #6b7280;
}

.form-item {
  margin-top: 26rpx;
}

.label {
  font-size: 26rpx;
  color: #374151;
  font-weight: 600;
}

.input {
  margin-top: 10rpx;
  width: 100%;
  height: 92rpx;
  padding: 0 24rpx;
  border-radius: 18rpx;
  background: #f4f6fb;
  font-size: 28rpx;
  color: #111827;
  border: 2rpx solid transparent;
}

.input:focus {
  border-color: #3b4bff;
}

.tips {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #6b7280;
}

.actions {
  margin-top: 40rpx;
}

.primary-btn {
  line-height: 96rpx;
  text-align: center;
  border-radius: 999rpx;
  background: linear-gradient(135deg, #3b4bff 0%, #5e72ff 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: 700;
  border: none;
  box-shadow: 0 14rpx 32rpx rgba(59, 75, 255, 0.24);
}

.primary-btn[disabled] {
  background: #cbd5e1;
  color: #64748b;
  box-shadow: none;
}
