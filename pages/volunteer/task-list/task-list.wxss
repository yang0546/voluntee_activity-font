.task-card {
  margin-bottom: 18rpx;
}

.task-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.task-top .title {
  font-size: 30rpx;
  font-weight: 700;
}

.task-card .tag {
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
}

.meta {
  color: #94a3b8;
  margin-top: 10rpx;
}

.empty {
  text-align: center;
  color: #94a3b8;
  margin-top: 80rpx;
}
