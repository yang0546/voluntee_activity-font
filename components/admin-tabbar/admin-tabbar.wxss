.tabbar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 120rpx;
  z-index: 30;
}

.tabbar-bg {
  position: absolute;
  inset: 0;
  background: #ffffff;
  border-top: 1rpx solid #e5e7eb;
  box-shadow: 0 -8rpx 24rpx rgba(15, 23, 42, 0.08);
}

.tabbar-content {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-around;
  height: 100%;
  padding: 0 24rpx;
  box-sizing: border-box;
  padding-bottom: calc(env(safe-area-inset-bottom));
  background: rgba(255, 255, 255, 0.92);
  backdrop-filter: blur(10rpx);
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 6rpx;
  color: #94a3b8;
  font-size: 24rpx;
  font-weight: 600;
  transition: all 0.2s ease;
}

.tab-item.active {
  color: #4f46e5;
  transform: translateY(-4rpx);
}

.tab-label {
  line-height: 1.3;
}
