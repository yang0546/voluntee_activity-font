.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx;
}

.activity-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 20rpx;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.status-badge {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.status-0 {
  background: #e3f2fd;
  color: #1976d2;
}

.status-1 {
  background: #e8f5e9;
  color: #388e3c;
}

.status-2 {
  background: #fafafa;
  color: #757575;
}

.status-3 {
  background: #ffebee;
  color: #d32f2f;
}

.section {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 26rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.content {
  display: block;
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
}

.actions {
  padding: 20rpx 0;
}

.btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  border: none;
  margin-bottom: 20rpx;
}

.btn-primary {
  background: linear-gradient(135deg, #f97316 0%, #ea580c 100%);
  color: #fff;
}

.btn-secondary {
  background: #ffc107;
  color: #fff;
}

.btn-warning {
  background: #ff9800;
  color: #fff;
}

.btn-danger {
  background: #f44336;
  color: #fff;
}

.btn-disabled {
  background: #ccc;
  color: #999;
}

.loading {
  text-align: center;
  padding: 100rpx;
  font-size: 28rpx;
  color: #999;
}
