.detail-hero {
  background: linear-gradient(135deg, #4f46e5, #3b82f6);
  color: #fff;
}

.detail-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.detail-title {
  font-size: 34rpx;
  font-weight: 800;
}

.detail-meta {
  color: rgba(255, 255, 255, 0.85);
  margin: 10rpx 0;
}

.detail-meta .dot {
  margin: 0 10rpx;
}

.info-card .info-row {
  display: flex;
  justify-content: space-between;
  padding: 14rpx 0;
  border-bottom: 1px solid #e5e7eb;
}

.info-card .info-row:last-child {
  border-bottom: none;
}

.info-card .label {
  color: #475569;
}

.info-card .value {
  color: #0f172a;
}

.desc {
  color: #1f2937;
  line-height: 1.6;
}

.task-item {
  padding: 12rpx 0;
  border-bottom: 1px solid #e5e7eb;
}

.task-item:last-child {
  border-bottom: none;
}

.task-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.task-title {
  font-size: 30rpx;
  font-weight: 700;
}

.task-meta {
  color: #94a3b8;
  margin-top: 6rpx;
}

.task-actions {
  margin-top: 10rpx;
}

.task-btn {
  background: #eef2ff;
  color: #4338ca;
}

.footer-actions {
  position: fixed;
  left: 0;
  right: 0;
  bottom: env(safe-area-inset-bottom);
  padding: 16rpx 32rpx calc(32rpx + env(safe-area-inset-bottom));
  background: rgba(255, 255, 255, 0.96);
  box-shadow: 0 -6rpx 18rpx rgba(15, 23, 42, 0.08);
  box-sizing: border-box;
}

.empty {
  text-align: center;
  color: #94a3b8;
  margin-top: 120rpx;
}
