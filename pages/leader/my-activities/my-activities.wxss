.page {
  min-height: 100vh;
  background: #f6f7fb;
  padding: 24rpx 20rpx 120rpx;
  box-sizing: border-box;
  position: relative;
}

button::after {
  border: none;
}

.top-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 280rpx;
  background: linear-gradient(135deg, #f97316 0%, #ea580c 40%, #dc2626 100%);
  border-radius: 0 0 32rpx 32rpx;
  z-index: 0;
}

.nav-bar {
  position: relative;
  z-index: 2;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 4rpx;
  color: #f9fbff;
}

.nav-left {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 800;
}

.create-btn {
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
  border: none;
  border-radius: 20rpx;
  padding: 12rpx 24rpx;
  font-size: 26rpx;
  font-weight: 600;
}

.card {
  position: relative;
  z-index: 2;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 22rpx;
  box-shadow: 0 14rpx 30rpx rgba(64, 73, 118, 0.12);
}

.filter-card {
  margin-top: 18rpx;
}

.card-header {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  margin-bottom: 14rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #111827;
}

.filter-grid {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 14rpx;
}

.filter-actions {
  grid-column: span 2;
  display: flex;
  gap: 14rpx;
}

.filter-actions .half {
  flex: 1;
  min-width: 0;
}

.field {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.field-label {
  font-size: 22rpx;
  color: #6b7280;
}

.input,
.picker {
  height: 76rpx;
  border-radius: 14rpx;
  border: 1rpx solid #e5e7eb;
  background: #f8fafc;
  padding: 0 18rpx;
  font-size: 26rpx;
  color: #111827;
}

.picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.chevron {
  color: #9ca3af;
}

.primary-btn,
.ghost-btn {
  border: none;
  border-radius: 14rpx;
  font-size: 26rpx;
  padding: 16rpx 22rpx;
  box-sizing: border-box;
}

.primary-btn {
  background: linear-gradient(135deg, #f97316 0%, #ea580c 100%);
  color: #fff;
  box-shadow: 0 12rpx 30rpx rgba(249, 115, 22, 0.25);
}

.ghost-btn {
  background: #f8fafc;
  color: #374151;
  border: 1rpx solid #e5e7eb;
}

.list {
  margin-top: 18rpx;
  padding-bottom: 40rpx;
}

.activity-card {
  background: #ffffff;
  border-radius: 18rpx;
  padding: 20rpx;
  margin-bottom: 14rpx;
  box-shadow: 0 10rpx 24rpx rgba(64, 73, 118, 0.08);
  border: 1rpx solid #eef1f5;
}

.card-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.title-wrap {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 800;
  color: #0f172a;
}

.desc {
  font-size: 24rpx;
  color: #6b7280;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.status-badge {
  padding: 10rpx 18rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  font-weight: 700;
  white-space: nowrap;
}

.status-pending {
  background: #e0f2fe;
  color: #0ea5e9;
}

.status-active {
  background: #e4f7ed;
  color: #22c55e;
}

.status-ended {
  background: #f4f4f5;
  color: #6b7280;
}

.status-cancelled {
  background: #ffe8e8;
  color: #e11d48;
}

.meta-grid {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 10rpx;
  margin-bottom: 12rpx;
}

.meta {
  background: #f8fafc;
  border-radius: 12rpx;
  padding: 12rpx 14rpx;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.meta-label {
  font-size: 22rpx;
  color: #6b7280;
}

.meta-value {
  font-size: 24rpx;
  color: #1f2937;
  word-break: break-word;
  line-height: 1.4;
}

.meta-value.time-value {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.foot {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.card-chevron {
  color: #cbd5e1;
  font-size: 36rpx;
}

.load-more,
.no-more,
.empty {
  text-align: center;
  padding: 22rpx 0;
  font-size: 26rpx;
  color: #9ca3af;
}

