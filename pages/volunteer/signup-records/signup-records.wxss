.record-card {
  margin-bottom: 18rpx;
}

.record-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.record-top .title {
  font-size: 32rpx;
  font-weight: 700;
}

.record-card .tag {
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
}

.meta {
  color: #94a3b8;
  margin-top: 8rpx;
}

.audit-reason {
  margin-top: 10rpx;
  color: #b91c1c;
  font-size: 26rpx;
  line-height: 1.4;
}

.empty {
  text-align: center;
  color: #94a3b8;
  margin-top: 80rpx;
}
