.page {
  min-height: 100vh;
  background: #f6f7fb;
  padding: 24rpx 20rpx 120rpx;
  box-sizing: border-box;
  position: relative;
}

button::after {
  border: none;
}

.top-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 340rpx;
  background: linear-gradient(135deg, #6ea8ff 0%, #7e7bff 40%, #9a6bff 100%);
  border-radius: 0 0 32rpx 32rpx;
  z-index: 0;
}

.nav-bar {
  position: relative;
  z-index: 2;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  padding: 10rpx 4rpx;
  color: #f9fbff;
}

.nav-left {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 800;
}

.nav-sub {
  font-size: 24rpx;
  opacity: 0.85;
}

.nav-tabs {
  display: inline-flex;
  background: rgba(255, 255, 255, 0.18);
  padding: 6rpx;
  border-radius: 999rpx;
  gap: 8rpx;
  backdrop-filter: blur(10rpx);
}

.nav-tab {
  padding: 14rpx 22rpx;
  border-radius: 999rpx;
  color: #eaf1ff;
  font-size: 24rpx;
}

.nav-tab.active {
  background: #fff;
  color: #4f46e5;
  box-shadow: 0 10rpx 26rpx rgba(79, 70, 229, 0.2);
}

.hero-card {
  position: relative;
  z-index: 2;
  margin-top: 12rpx;
  padding: 26rpx 24rpx;
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 18rpx 40rpx rgba(64, 73, 118, 0.15);
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
  box-sizing: border-box;
}

.hero-left {
  flex: 1;
  min-width: 0;
}

.hero-left {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  color: #0f172a;
}

.hero-label {
  font-size: 24rpx;
  color: #6366f1;
  font-weight: 600;
}

.hero-title {
  font-size: 38rpx;
  font-weight: 800;
}

.hero-sub {
  font-size: 24rpx;
  color: #6b7280;
}

.hero-actions {
  margin-top: 10rpx;
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.hero-actions .ghost-btn,
.hero-actions .primary-btn {
  flex: 1;
  min-width: 0;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.hero-stat {
  min-width: 100rpx;
  max-width: 200rpx;
  flex-shrink: 0;
  background: linear-gradient(180deg, #f5f7ff 0%, #ebedff 100%);
  border-radius: 18rpx;
  padding: 16rpx;
  text-align: right;
  box-shadow: inset 0 0 0 1rpx #e5e7eb;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  color: #1f2937;
  box-sizing: border-box;
}

.stat-label {
  font-size: 22rpx;
  color: #6b7280;
}

.stat-value {
  font-size: 44rpx;
  font-weight: 800;
  color: #111827;
}

.stat-tip {
  font-size: 22rpx;
  color: #9ca3af;
}

.primary-btn,
.ghost-btn {
  border: none;
  border-radius: 14rpx;
  font-size: 26rpx;
  padding: 16rpx 22rpx;
  box-sizing: border-box;
  max-width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.primary-btn {
  background: linear-gradient(135deg, #4f46e5 0%, #22c1c3 100%);
  color: #fff;
  box-shadow: 0 12rpx 30rpx rgba(79, 70, 229, 0.25);
}

.primary-btn.full {
  width: 100%;
  justify-content: center;
  display: flex;
}

.ghost-btn {
  background: #f8fafc;
  color: #374151;
  border: 1rpx solid #e5e7eb;
}

.ghost-btn.sm {
  padding: 12rpx 20rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
}

.card {
  position: relative;
  z-index: 2;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 22rpx;
  box-shadow: 0 14rpx 30rpx rgba(64, 73, 118, 0.12);
}

.filter-card {
  margin-top: 18rpx;
}

.card-header {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  margin-bottom: 14rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #111827;
}

.card-sub {
  font-size: 24rpx;
  color: #6b7280;
}

.filter-grid {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 14rpx;
}

.filter-actions {
  grid-column: span 2;
  display: flex;
  gap: 14rpx;
}

.filter-actions .half {
  flex: 1;
  min-width: 0;
}

.field {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.field-label {
  font-size: 22rpx;
  color: #6b7280;
}

.input,
.picker {
  height: 76rpx;
  border-radius: 14rpx;
  border: 1rpx solid #e5e7eb;
  background: #f8fafc;
  padding: 0 18rpx;
  font-size: 26rpx;
  color: #111827;
}

.picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.chevron {
  color: #9ca3af;
}

.input:focus,
.picker:active {
  border-color: #6366f1;
  background: #eef2ff;
}

.section-head {
  margin: 16rpx 2rpx 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #111827;
  gap: 12rpx;
}

.section-head .ghost-btn {
  flex-shrink: 0;
  max-width: 200rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 700;
}

.section-sub {
  font-size: 24rpx;
  color: #6b7280;
}

.list {
  margin-top: 6rpx;
  padding-bottom: 40rpx;
}

.activity-card {
  background: #ffffff;
  border-radius: 18rpx;
  padding: 20rpx;
  margin-bottom: 14rpx;
  box-shadow: 0 10rpx 24rpx rgba(64, 73, 118, 0.08);
  border: 1rpx solid #eef1f5;
}

.card-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.title-wrap {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 800;
  color: #0f172a;
}

.desc {
  font-size: 24rpx;
  color: #6b7280;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.status-badge {
  padding: 10rpx 18rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  font-weight: 700;
  white-space: nowrap;
}

.status-pending {
  background: #e0f2fe;
  color: #0ea5e9;
}

.status-active {
  background: #e4f7ed;
  color: #22c55e;
}

.status-ended {
  background: #f4f4f5;
  color: #6b7280;
}

.status-cancelled {
  background: #ffe8e8;
  color: #e11d48;
}

.meta-grid {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 10rpx;
  margin-bottom: 12rpx;
}

.meta {
  background: #f8fafc;
  border-radius: 12rpx;
  padding: 12rpx 14rpx;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.meta-label {
  font-size: 22rpx;
  color: #6b7280;
}

.meta-value {
  font-size: 24rpx;
  color: #1f2937;
  word-break: break-word;
  line-height: 1.4;
}

.meta-value.time-value {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.foot {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.leader {
  font-size: 24rpx;
  color: #4b5563;
}

.card-chevron {
  color: #cbd5e1;
  font-size: 36rpx;
}

.load-more,
.no-more,
.empty {
  text-align: center;
  padding: 22rpx 0;
  font-size: 26rpx;
  color: #9ca3af;
}

