<view class="page task-page">
  <block wx:if="{{tasks.length}}">
    <view wx:for="{{tasks}}" wx:key="taskId" class="task-card card">
      <view class="task-top">
        <view class="title">{{item.content}}</view>
        <view class="tag {{item.statusClass}}">{{item.statusText}}</view>
      </view>
      <view class="meta">负责人：{{item.userName || '我'}}</view>
      <view class="meta">{{item.timeRange}}</view>
    </view>
  </block>
  <view wx:else class="empty">暂无任务</view>
</view>
