.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
}

.filter-bar {
  padding: 20rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.status-picker {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 20rpx;
  height: 60rpx;
  background: #f5f5f5;
  border-radius: 30rpx;
  font-size: 28rpx;
}

.arrow {
  margin-left: 10rpx;
  font-size: 20rpx;
  color: #999;
}

.signup-list {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
}

.signup-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.04);
}

.signup-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.user-info {
  flex: 1;
}

.user-name {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.signup-time {
  font-size: 26rpx;
  color: #999;
}

.status-badge {
  padding: 6rpx 18rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  white-space: nowrap;
}

.status-pending {
  background: #fff3e0;
  color: #f57c00;
}

.status-approved {
  background: #e8f5e9;
  color: #388e3c;
}

.status-rejected {
  background: #ffebee;
  color: #d32f2f;
}

.audit-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

.btn {
  flex: 1;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  border-radius: 36rpx;
  font-size: 28rpx;
  border: none;
}

.btn-approve {
  background: linear-gradient(135deg, #4caf50 0%, #388e3c 100%);
  color: #fff;
}

.btn-reject {
  background: linear-gradient(135deg, #f44336 0%, #d32f2f 100%);
  color: #fff;
}

.load-more, .no-more, .empty {
  text-align: center;
  padding: 40rpx;
  font-size: 28rpx;
  color: #999;
}

