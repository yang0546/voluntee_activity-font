.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx;
}

.activity-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 20rpx;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.status-badge {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.status-0 {
  background: #e3f2fd;
  color: #1976d2;
}

.status-1 {
  background: #e8f5e9;
  color: #388e3c;
}

.status-2 {
  background: #fafafa;
  color: #757575;
}

.status-3 {
  background: #ffebee;
  color: #d32f2f;
}

.section {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 26rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.content {
  display: block;
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
}

.time-grid {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 12rpx;
}


.btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  border: none;
  margin-bottom: 0;
}

.btn-primary {
  background: linear-gradient(135deg, #f97316 0%, #ea580c 100%);
  color: #fff;
}

.btn-secondary {
  background: #6366f1;
  color: #fff;
}

.btn-warning {
  background: #ff9800;
  color: #fff;
}

.btn-danger {
  background: #f44336;
  color: #fff;
}

.btn-disabled {
  background: #ccc;
  color: #999;
}

.loading {
  text-align: center;
  padding: 100rpx;
  font-size: 28rpx;
  color: #999;
}

.task-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.04);
}

.task-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.task-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
}

.task-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.task-item:last-child {
  border-bottom: none;
}

.task-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.task-user {
  font-size: 30rpx;
  font-weight: 600;
  color: #111827;
}

.task-content {
  font-size: 28rpx;
  color: #374151;
  line-height: 1.5;
  margin-bottom: 8rpx;
}

.task-time {
  font-size: 24rpx;
  color: #6b7280;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.empty {
  text-align: center;
  color: #9ca3af;
  padding: 24rpx 0;
  font-size: 26rpx;
}

.task-status {
  font-size: 24rpx;
  font-weight: 600;
}

.status-task-pending {
  background: #e3f2fd;
  color: #1976d2;
}

.status-task-progress {
  background: #fff3e0;
  color: #f57c00;
}

.status-task-done {
  background: #e8f5e9;
  color: #2e7d32;
}
