<view class="page profile-page">
  <view class="hero">
    <view class="hero-bg"></view>
    <view class="card hero-card">
      <view class="hero-main">
        <image class="avatar" src="{{profile.avatarUrl || defaultAvatar}}" mode="aspectFill"></image>
        <view class="hero-text">
          <view class="name">{{profile.name || '志愿者'}}</view>
          <view class="sub">{{profile.college || '志愿服务小队'}} · {{profile.phone || '完善信息后展示'}}</view>
        </view>
        <button size="mini" class="primary-ghost" bindtap="goSquare">去活动广场</button>
      </view>
    </view>
  </view>

  <view class="card stats-card">
    <view class="stat">
      <view class="stat-value">{{stats.approved}}</view>
      <view class="stat-label">已通过</view>
    </view>
    <view class="stat">
      <view class="stat-value">{{stats.pending}}</view>
      <view class="stat-label">待审核</view>
    </view>
    <view class="stat">
      <view class="stat-value">{{stats.total}}</view>
      <view class="stat-label">累计报名</view>
    </view>
  </view>

  <view class="card quick-card">
    <view class="quick-item" bindtap="goRecords">
      <view class="icon-circle">📝</view>
      <view class="quick-text">我的报名</view>
      <text class="chevron">›</text>
    </view>
    <view class="quick-item" bindtap="goMyActivities">
      <view class="icon-circle">✅</view>
      <view class="quick-text">我的活动</view>
      <text class="chevron">›</text>
    </view>
    <view class="quick-item" bindtap="contact">
      <view class="icon-circle">☎️</view>
      <view class="quick-text">联系客服</view>
      <text class="chevron">›</text>
    </view>
    <view class="quick-item danger" bindtap="logout">
      <view class="icon-circle danger-circle">⏻</view>
      <view class="quick-text">退出登录</view>
      <text class="chevron">›</text>
    </view>
  </view>
</view>
