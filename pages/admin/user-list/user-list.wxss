.page {
  min-height: 100vh;
  background: #f6f7fb;
  padding: 24rpx 20rpx 120rpx;
  box-sizing: border-box;
  position: relative;
}

button::after {
  border: none;
}

.top-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 340rpx;
  background: linear-gradient(135deg, #6ea8ff 0%, #7e7bff 40%, #9a6bff 100%);
  border-radius: 0 0 32rpx 32rpx;
  z-index: 0;
}

.nav-bar {
  position: relative;
  z-index: 2;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  padding: 10rpx 4rpx;
  color: #f9fbff;
}

.nav-left {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 800;
}

.nav-sub {
  font-size: 24rpx;
  opacity: 0.85;
}

.nav-tabs {
  display: inline-flex;
  background: rgba(255, 255, 255, 0.18);
  padding: 6rpx;
  border-radius: 999rpx;
  gap: 8rpx;
  backdrop-filter: blur(10rpx);
}

.nav-tab {
  padding: 14rpx 22rpx;
  border-radius: 999rpx;
  color: #eaf1ff;
  font-size: 24rpx;
}

.nav-tab.active {
  background: #fff;
  color: #4f46e5;
  box-shadow: 0 10rpx 26rpx rgba(79, 70, 229, 0.2);
}

.hero-card {
  position: relative;
  z-index: 2;
  margin-top: 12rpx;
  padding: 26rpx 24rpx;
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 18rpx 40rpx rgba(64, 73, 118, 0.15);
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
  box-sizing: border-box;
}

.hero-left {
  flex: 1;
  min-width: 0;
}

.hero-left {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  color: #0f172a;
}

.hero-label {
  font-size: 24rpx;
  color: #6366f1;
  font-weight: 600;
}

.hero-title {
  font-size: 38rpx;
  font-weight: 800;
}

.hero-sub {
  font-size: 24rpx;
  color: #6b7280;
}

.hero-actions {
  margin-top: 10rpx;
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.hero-actions .ghost-btn,
.hero-actions .primary-btn {
  flex: 1;
  min-width: 0;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.hero-stat {
  min-width: 100rpx;
  max-width: 200rpx;
  flex-shrink: 0;
  background: linear-gradient(180deg, #f5f7ff 0%, #ebedff 100%);
  border-radius: 18rpx;
  padding: 16rpx;
  text-align: right;
  box-shadow: inset 0 0 0 1rpx #e5e7eb;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  color: #1f2937;
  box-sizing: border-box;
}

.stat-label {
  font-size: 22rpx;
  color: #6b7280;
}

.stat-value {
  font-size: 44rpx;
  font-weight: 800;
  color: #111827;
}

.stat-tip {
  font-size: 22rpx;
  color: #9ca3af;
}

.primary-btn,
.ghost-btn {
  border: none;
  border-radius: 14rpx;
  font-size: 26rpx;
  padding: 16rpx 22rpx;
  box-sizing: border-box;
  max-width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.primary-btn {
  background: linear-gradient(135deg, #4f46e5 0%, #22c1c3 100%);
  color: #fff;
  box-shadow: 0 12rpx 30rpx rgba(79, 70, 229, 0.25);
}

.primary-btn.full {
  width: 100%;
  justify-content: center;
  display: flex;
}

.ghost-btn {
  background: #f8fafc;
  color: #374151;
  border: 1rpx solid #e5e7eb;
}

.ghost-btn.sm {
  padding: 12rpx 20rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
}

.card {
  position: relative;
  z-index: 2;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 22rpx;
  box-shadow: 0 14rpx 30rpx rgba(64, 73, 118, 0.12);
}

.filter-card {
  margin-top: 18rpx;
}

.card-header {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  margin-bottom: 14rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #111827;
}

.card-sub {
  font-size: 24rpx;
  color: #6b7280;
}

.filter-grid {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 14rpx;
}

.filter-actions {
  grid-column: span 2;
  display: flex;
  gap: 14rpx;
}

.filter-actions .half {
  flex: 1;
  min-width: 0;
}

.field {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.field-label {
  font-size: 22rpx;
  color: #6b7280;
}

.input,
.picker {
  height: 76rpx;
  border-radius: 14rpx;
  border: 1rpx solid #e5e7eb;
  background: #f8fafc;
  padding: 0 18rpx;
  font-size: 26rpx;
  color: #111827;
}

.picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.chevron {
  color: #9ca3af;
}

.input:focus,
.picker:active {
  border-color: #6366f1;
  background: #eef2ff;
}

.section-head {
  margin: 16rpx 2rpx 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #111827;
  gap: 12rpx;
}

.section-head .ghost-btn {
  flex-shrink: 0;
  max-width: 200rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 700;
}

.section-sub {
  font-size: 24rpx;
  color: #6b7280;
}

.list {
  margin-top: 6rpx;
  padding-bottom: 40rpx;
}

.user-card {
  background: #ffffff;
  border-radius: 18rpx;
  padding: 20rpx;
  margin-bottom: 14rpx;
  box-shadow: 0 10rpx 24rpx rgba(64, 73, 118, 0.08);
  display: flex;
  align-items: center;
  gap: 14rpx;
  border: 1rpx solid #eef1f5;
  position: relative;
}

.avatar-shell {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #e0e7ff, #dbeafe);
  padding: 6rpx;
  box-shadow: inset 0 0 0 1rpx #e5e7eb;
}

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: #f1f5f9;
}

.card-content {
  flex: 1;
}

.card-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.name {
  font-size: 32rpx;
  font-weight: 700;
  color: #0f172a;
}

.role-tag {
  padding: 10rpx 16rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.role-0 {
  background: #e0f2fe;
  color: #0ea5e9;
}

.role-1 {
  background: #fff7ed;
  color: #f97316;
}

.role-2 {
  background: #ede9fe;
  color: #7c3aed;
}

.meta-row {
  display: flex;
  align-items: center;
  gap: 10rpx;
  margin-bottom: 6rpx;
}

.meta-label {
  width: 100rpx;
  font-size: 24rpx;
  color: #6b7280;
}

.meta-value {
  font-size: 24rpx;
  color: #374151;
  flex: 1;
}

.card-chevron {
  color: #cbd5e1;
  font-size: 36rpx;
}

.role-chip {
  position: absolute;
  top: 18rpx;
  right: 18rpx;
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  font-weight: 600;
  z-index: 1;
  white-space: nowrap;
}

.role-chip.role-0 {
  background: #e0f2fe;
  color: #0ea5e9;
}

.role-chip.role-1 {
  background: #fff7ed;
  color: #f97316;
}

.role-chip.role-2 {
  background: #ede9fe;
  color: #7c3aed;
}

.role-chip.role-undefined,
.role-chip.role-null,
.role-chip.role- {
  background: #f3f4f6;
  color: #6b7280;
}

.role-text {
  font-weight: 600;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  display: inline-block;
}

.role-text.role-0 {
  background: #e0f2fe;
  color: #0ea5e9;
}

.role-text.role-1 {
  background: #fff7ed;
  color: #f97316;
}

.role-text.role-2 {
  background: #ede9fe;
  color: #7c3aed;
}

.role-text.role-undefined,
.role-text.role-null,
.role-text.role- {
  background: #f3f4f6;
  color: #6b7280;
}

.load-more,
.no-more,
.empty {
  text-align: center;
  padding: 22rpx 0;
  font-size: 26rpx;
  color: #9ca3af;
}
