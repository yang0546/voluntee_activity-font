.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
}

.task-list {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
}

.task-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.04);
}

.task-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.task-content {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
  margin-right: 20rpx;
}

.status-badge {
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  white-space: nowrap;
}

.status-pending {
  background: #e3f2fd;
  color: #1976d2;
}

.status-active {
  background: #fff3e0;
  color: #f57c00;
}

.status-done {
  background: #e8f5e9;
  color: #388e3c;
}

.task-info {
  margin-bottom: 20rpx;
}

.task-user {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.task-time {
  font-size: 26rpx;
  color: #999;
}

.task-actions {
  display: flex;
  gap: 20rpx;
  flex-wrap: wrap;
}

.btn {
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
  border: none;
}

.btn-primary {
  background: linear-gradient(135deg, #f97316 0%, #ea580c 100%);
  color: #fff;
}

.btn-secondary {
  background: #f5f5f5;
  color: #666;
  border: 1rpx solid #ddd;
}

.empty {
  text-align: center;
  padding: 100rpx;
  font-size: 28rpx;
  color: #999;
}

