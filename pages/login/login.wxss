/* 页面容器 */
.page {
  min-height: 100vh;
  background: linear-gradient(180deg, #667eea 0%, #764ba2 50%, #f5f7fa 50%);
  padding: 0;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}

/* 背景装饰圆圈 */
.bg-decoration {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
  z-index: 0;
}

.circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(20rpx);
}

.circle-1 {
  width: 400rpx;
  height: 400rpx;
  top: -150rpx;
  right: -100rpx;
  animation: float 6s ease-in-out infinite;
}

.circle-2 {
  width: 300rpx;
  height: 300rpx;
  top: 200rpx;
  left: -80rpx;
  animation: float 8s ease-in-out infinite reverse;
}

.circle-3 {
  width: 200rpx;
  height: 200rpx;
  top: 500rpx;
  right: 50rpx;
  animation: float 7s ease-in-out infinite;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0) scale(1);
  }
  50% {
    transform: translateY(-30rpx) scale(1.05);
  }
}

/* 顶部欢迎区域 */
.header-section {
  padding: 80rpx 40rpx 40rpx;
  position: relative;
  z-index: 1;
}

.welcome-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
  margin-bottom: 12rpx;
  letter-spacing: 2rpx;
}

.app-name {
  font-size: 48rpx;
  color: #ffffff;
  font-weight: 800;
  letter-spacing: 1rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

/* 主内容区域 */
.main-content {
  padding: 0 36rpx 60rpx;
  position: relative;
  z-index: 1;
}

/* 应用信息卡片 */
.app-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 32rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 20rpx 60rpx rgba(102, 126, 234, 0.4),
              0 8rpx 24rpx rgba(118, 75, 162, 0.3);
  position: relative;
  overflow: hidden;
}

.app-card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
  animation: rotate 20s linear infinite;
}

@keyframes rotate {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.app-logo-wrapper {
  position: relative;
  display: inline-block;
  margin-bottom: 24rpx;
}

.app-logo {
  width: 140rpx;
  height: 140rpx;
  line-height: 140rpx;
  text-align: center;
  border-radius: 28rpx;
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(10rpx);
  font-size: 72rpx;
  font-weight: 900;
  color: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15),
              inset 0 2rpx 8rpx rgba(255, 255, 255, 0.3);
  position: relative;
  z-index: 2;
}

.logo-glow {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  filter: blur(20rpx);
  z-index: 1;
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    opacity: 0.6;
    transform: translate(-50%, -50%) scale(1);
  }
  50% {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1.1);
  }
}

.app-info {
  position: relative;
  z-index: 2;
}

.app-title {
  font-size: 44rpx;
  font-weight: 800;
  color: #ffffff;
  margin-bottom: 12rpx;
  letter-spacing: 1rpx;
}

.app-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 24rpx;
  line-height: 1.6;
}

.feature-tags {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.feature-tag {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
  border-radius: 999rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.tag-icon {
  font-size: 24rpx;
}

.tag-text {
  font-size: 24rpx;
  color: #ffffff;
  font-weight: 500;
}

/* 信息说明卡片 */
.info-card {
  background: #ffffff;
  border-radius: 28rpx;
  padding: 36rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.08),
              0 4rpx 12rpx rgba(0, 0, 0, 0.04);
}

.info-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.info-icon {
  font-size: 32rpx;
}

.info-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1e293b;
  letter-spacing: 0.5rpx;
}

.info-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 24rpx;
}

.info-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
}

.info-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  margin-top: 8rpx;
  flex-shrink: 0;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.4);
}

.info-text {
  font-size: 28rpx;
  color: #475569;
  line-height: 1.7;
  flex: 1;
}

.privacy-tip {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
  border-radius: 16rpx;
  border-left: 4rpx solid #667eea;
}

.tip-icon {
  font-size: 28rpx;
  flex-shrink: 0;
}

.tip-text {
  font-size: 24rpx;
  color: #64748b;
  line-height: 1.7;
  flex: 1;
}

/* 登录按钮 */
.login-btn {
  width: 100%;
  height: 104rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 999rpx;
  border: none;
  position: relative;
  overflow: hidden;
  box-shadow: 0 16rpx 40rpx rgba(102, 126, 234, 0.4),
              0 8rpx 16rpx rgba(118, 75, 162, 0.3);
  margin-bottom: 32rpx;
  transition: all 0.3s ease;
}

.login-btn::after {
  border: none;
}

.login-btn:active {
  transform: scale(0.98);
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3),
              0 4rpx 8rpx rgba(118, 75, 162, 0.2);
}

.btn-content {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  height: 100%;
  position: relative;
  z-index: 2;
}

.btn-icon {
  font-size: 36rpx;
}

.btn-text {
  font-size: 34rpx;
  font-weight: 700;
  color: #ffffff;
  letter-spacing: 1rpx;
}

.btn-shine {
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, 
    transparent 0%, 
    rgba(255, 255, 255, 0.3) 50%, 
    transparent 100%);
  animation: shine 3s infinite;
}

@keyframes shine {
  0% {
    left: -100%;
  }
  50%, 100% {
    left: 100%;
  }
}

/* 协议链接 */
.agreement-footer {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 8rpx;
  flex-wrap: wrap;
  padding: 0 20rpx;
}

.agreement-text {
  font-size: 24rpx;
  color: #94a3b8;
}

.agreement-link {
  font-size: 24rpx;
  color: #667eea;
  font-weight: 500;
  text-decoration: underline;
}

